<p id="notice"><%= notice %></p>

<h2 class="text-center text-white">Productos</h2>
<%= render 'form', product: @product%>

<table>
  <thead>
    <tr>
      <th>Nombre del producto</th>  
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
     <%= render 'product', product: product %>
    <% end %>
  </tbody>

  <div id='product-content'></div>