<p id="notice"><%= notice %></p>
<br>
<h2 class="text-center text-danger">Registro de abonos</h2>

<div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th class="text-dark text-center">Nombre del Cliente</th>  
          <th class="text-dark text-center">Saldo Abonado</th>  
          <th class="text-dark text-center">Fecha de Abono</th>  
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td class="text-center"><%= payment.customer_id.name %></td>
            <td class="text-center"><%= payment.created_at.name %></td>
            <td><%= link_to 'Show', payment %></td>
            <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
            <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 

<br>

<button class="btn btn-danger"><%= link_to 'Nuevo Abono', new_payment_path %></button>
