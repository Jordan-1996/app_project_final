<p id="notice"><%= notice %></p>

<section class="container mt-0 mb-4">
  <%= image_tag "logo_carniceria.png", class:"img-fluid" %>
</section>

<!--Tipo de Cambio CR-->
<section class="d-flex justify-content-center">
    <table class="table table-sm table-borderless d-flex align-items-end flex-column bd-highlight mb-0">
      <thead> 
        <tr>
          <th scope="col text-center">Compra</th>
          <th scope="col text-center">Venta</th>
          <th scope="col text-center">Fecha</th>
        </tr>
      </thead>
      <tbody class="d-flex align-items-end flex-column bd-highlight mb-0">
        <tr>
          <td id="compra"></td>
          <td id="venta"></td>
          <td id="fecha"></td>
        </tr>
      </tbody>
    </table>
</section>
 <div class=" container line border-danger border-top pt-2 pb-3"></div>
<h2 class="text-center text-danger">Registro de Abonos</h2>

<section class="container py-0 mb-5">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead class="table-secondary">
          <tr>
            <th class="text-dark text-center">Nombre del Cliente</th>
            <th class="text-dark text-center">Apellido</th>
            <th class="text-dark text-center">Saldo Abonado</th>  
            <th class="text-dark text-center">Fecha de Abono</th>  
            <th colspan="3" class="text-center"><button type="button" class="btn btn-white"><%= link_to 'Nuevo Abono', new_payment_path %></button></th>
          </tr>
        </thead>

        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td class="text-center"><%= payment.customer.name %></td>
              <td class="text-center"><%= payment.customer.last_name %></td>
              <td class="text-center"><%= payment.balance_paid %></td>
              <td class="text-center"><%= payment.created_at %></td>
              <!--<td class="text-center"><%= link_to 'Show', payment %></td>-->
              <td class="text-center"><%= link_to 'Edit', edit_payment_path(payment) %></td>
              <td class="text-center"><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div> 
</section>