<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<body class="bg-dark">
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-dark-light my-4">Ingresar nuevo abono</h3></div>
                            <div class="card-body">
                                <form>
                                    <div class="form-group">
                                      <%= form.label :customer_id %>
                                      <%= form.select :customer_id, options_from_collection_for_select(@customers, :id, :name ), prompt: "Selecciona un cliente" %>
                                    </div>
                                    <div class="form-group">           
                                      <label class="large mb-1" for="inputPassword">Abono</label>
                                       <%= form.text_field :balance_paid, class:'form-control py-4 mb-1', placeholder: 'Cantidad a abonar' %>
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                      <%= form.submit class: 'actions btn btn-danger text-white', data: {disable_with: 'submitting...'} %> 
                                      <button class="btn btn-dark"><%= link_to 'Back', payments_path %></button>
                                    </div>
                                    <% end %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>


