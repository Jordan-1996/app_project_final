<p id="notice"><%= notice %></p>

<br>
<div class="card mx-auto" style="width: 18rem;">
  <div class="card-body head">
    <h5 class="card-title text-white text-center">Datos del Cliente</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Nombre: 
     <%= @customer.name %>
     </li>
    <li class="list-group-item">Apellido:
      <%= @customer.last_name %>
    </li>
    <li class="list-group-item">Dirección:
      <%= @customer.address %>
    </li>
     <li class="list-group-item">Télefono:
      <%= @customer.telephone %>
    </li>
     <li class="list-group-item">Saldo Pendiente:
      <%= @customer.balance %>
    </li>
  </ul>
  <div class="card-body">
    <button class="button"><a><%= link_to 'Edit', edit_customer_path(@customer), id: "btn-c" %></a></button> 
    <button><a><%= link_to 'Back', customers_path, id: "btn-c" %></a></button>
  </div>
</div>



