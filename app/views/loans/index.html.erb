<p id="notice"><%= notice %></p>
<br>
<h2 class="text-center text-danger">Préstamo</h2>
<br>

<div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
        <th class="text-center">Nombre</th>
        <th class="text-center">Apellido</th>
        <th class="text-center">Total de préstamo</th>
        <th class="text-center">Fecha</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @loans.each do |loan| %>
          <tr>
            <td class="text-center"><%=loan.customer.name%></td>
            <td class="text-center"><%=loan.customer.last_name%></td>
            <td class="text-center"><%=loan.total_loan%></td>
            <td class="text-center"><%=loan.created_at%></td>

            <td><%= link_to 'Show', loan %></td>
            <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
            <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<button class="btn btn-dark text-danger"><%= link_to 'Nuevo Préstamo', new_loan_path %></button>
