<p id="notice"><%= notice %></p>

<section class="container my-0">
  <%= image_tag "logo_carniceria.png", class:"img-fluid" %>
</section>
 <div class="line border-danger border-top mt-5 pb-4"></div>

<section class="container mb-5">
  <h2 class="text-center text-danger mt-4">Registro de Préstamos</h2>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-secondary">
            <tr>
            <th class="text-center">Nombre</th>
            <th class="text-center">Apellido</th>
            <th class="text-center">Total de préstamo</th>
            <th class="text-center">Fecha</th>
            <th colspan="3" class="text-center"><button class="btn btn-white"><%= link_to 'Nuevo Préstamo', new_loan_path %></button></th>
            </tr>
          </thead>

          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td class="text-center"><%=loan.customer.name%></td>
                <td class="text-center"><%=loan.customer.last_name%></td>
                <td class="text-center"><%=loan.total_loan%></td>
                <td class="text-center"><%=loan.created_at%></td>
                <td class="text-center"><%= link_to 'Show', loan %></td>
                <td class="text-center"><%= link_to 'Edit', edit_loan_path(loan) %></td>
                <td class="text-center"><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</section>
