<%= form_with(model: loan) do |form| %>
  
<body class="bg-dark">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                          <div class="card-header"><h3 class="text-center font-dark-light my-4">Ingresar nuevo préstamo</h3></div>
                          <div class="card-body">
                            <div class="field">
                              <%= form.label :customer_id %>
                              <%= form.select :customer_id, options_from_collection_for_select(@customers, :id, :name ), prompt: "Selecciona un cliente" %>
                            </div>
                              <%= form.fields_for :loan_products do |loan_product| %>
                                    <div id="product_fields">
                                      <div>
                                        <div class="field">
                                          <%= loan_product.label :product_id %>
                                          <%= loan_product.select :product_id, options_for_select(@products), prompt: "Seleccione un producto" %>
                                        </div>
                                        <div class="field">
                                          <%= loan_product.label :product_quantity %>
                                          <%= loan_product.text_field :product_quantity %>
                                        </div>
                                      </div>
                                    </div>     
                                    <%= link_to 'Añadir más productos',  add_products_loans_path, id: 'add_product', remote: true %>                     
                                    <br>
                                  <%end%>
                                    <br>
                                  <%= form.submit class: 'actions btn btn-danger text-whit' %>
                                  <% end %>
                      <button type='button', class="btn btn-secondary"><%= link_to 'Back', loans_path %></button> |
                      <button type='button', class="btn btn-secondary"><%= link_to 'Show', @loan %></button>
                  </div>
              </div>
          </div>
    </main>
</body>
